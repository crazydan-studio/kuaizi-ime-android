<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/title_preference_basic">
        <!-- useSimpleSummaryProvider 为 true 时，在标签下方将显示设置的值 -->
        <ListPreference
                app:key="theme"
                app:title="@string/label_switch_theme"
                app:entries="@array/theme_entries"
                app:entryValues="@array/theme_values"
                app:defaultValue="night"
                app:useSimpleSummaryProvider="true" />

        <ListPreference
                app:key="hand_mode"
                app:title="@string/label_switch_hand_mode"
                app:entries="@array/hand_mode_entries"
                app:entryValues="@array/hand_mode_values"
                app:defaultValue="right"
                app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/title_preference_performance">
        <SwitchPreferenceCompat
                app:key="disable_key_clicked_audio"
                app:title="@string/label_disable_key_clicked_audio" />

        <SwitchPreferenceCompat
                app:key="disable_input_candidates_paging_audio"
                app:title="@string/label_disable_paging_audio" />

        <SwitchPreferenceCompat
                app:key="disable_pinyin_gliding_input_animation"
                app:title="@string/label_disable_gliding_input_animation" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/title_preference_about">
        <!-- https://stackoverflow.com/questions/7275015/android-start-activity-from-preferences-xml#answer-10441707 -->
        <PreferenceScreen android:title="@string/title_about_thanks">
            <intent android:action=".ui.about.AboutThanks" />
        </PreferenceScreen>
        <PreferenceScreen android:title="@string/title_about_suggestion">
            <intent android:action=".ui.about.AboutSuggestion" />
        </PreferenceScreen>
        <PreferenceScreen android:title="@string/title_about_app">
            <intent android:action=".ui.about.AboutApp" />
        </PreferenceScreen>
        <PreferenceScreen android:title="@string/title_about_team">
            <intent android:action=".ui.about.AboutTeam" />
        </PreferenceScreen>
        <PreferenceScreen android:title="@string/title_about_change_log">
            <intent android:action=".ui.about.AboutChangeLog" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>