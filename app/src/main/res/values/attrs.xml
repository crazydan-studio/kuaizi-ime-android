<resources>
    <declare-styleable name="RecyclerPageIndicatorView">
        <attr name="dot_size" format="dimension" />
        <attr name="dot_spacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ImeAppStyle">
        <attr name="app_white_color" format="color" />

        <attr name="app_bg_color" format="color" />
        <attr name="app_actionbar_bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ImeStyle">
        <attr name="bg_primary_color" format="color" />
        <attr name="bg_secondary_color" format="color" />
        <attr name="fg_primary_color" format="color" />
        <attr name="fg_secondary_color" format="color" />
        <attr name="text_color" format="color" />
        <attr name="title_text_color" format="color" />
        <attr name="border_color" format="color" />

        <attr name="keyboard_style" format="reference" />
        <attr name="inputboard_style" format="reference" />
        <attr name="candidates_style" format="reference" />

        <attr name="board_bg_color" format="color" />
        <attr name="board_border_color" format="color" />
        <attr name="board_divider_color" format="color" />

        <!-- Popup 配置 -->
        <attr name="popup_input_quick_bg_color" format="color" />
        <attr name="popup_input_quick_fg_color" format="color" />
        <attr name="popup_input_quick_border_color" format="color" />
        <attr name="popup_input_quick_shadow_style" format="string" />

        <!-- 动画 -->
        <attr name="anim_slide_in" format="reference" />
        <attr name="anim_slide_out" format="reference" />
        <attr name="anim_fade_in" format="reference" />
        <attr name="anim_fade_out" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImeInputboardStyle">
        <attr name="input_bg_color" format="color" />
        <attr name="input_fg_color" format="color" />

        <attr name="input_selection_bg_color" format="color" />
        <attr name="input_selection_fg_color" format="color" />

        <attr name="input_math_expr_border_color" format="color" />
        <attr name="input_math_expr_border_highlight_color" format="color" />

        <attr name="input_tool_fg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ImeCandidatesStyle">
        <attr name="snackbar_bg_color" format="color" />
        <attr name="snackbar_fg_color" format="color" />
        <attr name="snackbar_btn_color" format="color" />

        <attr name="tooltip_bg" format="reference" />
        <attr name="tooltip_fg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ImeKeyboardStyle">
        <attr name="gesture_trail_color" format="color" />

        <attr name="key_bg_color" format="color" />
        <attr name="key_fg_color" format="color" />
        <attr name="key_highlight_fg_color" format="color" />

        <!-- format: width #AARRGGBB -->
        <attr name="key_border_style" format="string" />
        <attr name="key_disabled_border_style" format="string" />
        <!-- format: dx dy radius #AARRGGBB -->
        <attr name="key_shadow_style" format="string" />

        <attr name="key_ctrl_label_color" format="color" />
        <attr name="key_ctrl_noop_bg_color" format="color" />
        <attr name="key_ctrl_noop_fg_color" format="color" />
        <attr name="key_ctrl_switcher_bg_color" format="color" />
        <attr name="key_ctrl_switcher_fg_color" format="color" />

        <attr name="key_ctrl_backspace_bg_color" format="color" />
        <attr name="key_ctrl_backspace_fg_color" format="color" />
        <attr name="key_ctrl_space_bg_color" format="color" />
        <attr name="key_ctrl_space_fg_color" format="color" />

        <attr name="key_ctrl_exit_bg_color" format="color" />
        <attr name="key_ctrl_exit_fg_color" format="color" />

        <attr name="key_ctrl_ok_bg_color" format="color" />
        <attr name="key_ctrl_ok_fg_color" format="color" />
        <attr name="key_ctrl_commit_bg_color" format="color" />
        <attr name="key_ctrl_commit_fg_color" format="color" />
        <attr name="key_ctrl_enter_bg_color" format="color" />
        <attr name="key_ctrl_enter_fg_color" format="color" />

        <attr name="key_ctrl_confirm_bg_color" format="color" />
        <attr name="key_ctrl_confirm_fg_color" format="color" />
        <attr name="key_ctrl_locator_bg_color" format="color" />
        <attr name="key_ctrl_locator_fg_color" format="color" />

        <attr name="key_char_symbol_bg_color" format="color" />
        <attr name="key_char_symbol_fg_color" format="color" />

        <attr name="key_char_level_0_bg_color" format="color" />
        <attr name="key_char_level_0_fg_color" format="color" />
        <attr name="key_char_level_1_bg_color" format="color" />
        <attr name="key_char_level_1_fg_color" format="color" />
        <attr name="key_char_level_2_bg_color" format="color" />
        <attr name="key_char_level_2_fg_color" format="color" />
        <attr name="key_char_level_3_bg_color" format="color" />
        <attr name="key_char_level_3_fg_color" format="color" />
        <attr name="key_char_level_4_bg_color" format="color" />
        <attr name="key_char_level_4_fg_color" format="color" />
        <attr name="key_char_level_5_bg_color" format="color" />
        <attr name="key_char_level_5_fg_color" format="color" />

        <!-- format: dx dy radius #AARRGGBB -->
        <attr name="xpad_key_shadow_style" format="string" />
        <!-- format: width #AARRGGBB -->
        <attr name="xpad_key_ctrl_divider_style" format="string" />
        <attr name="xpad_key_ctrl_bg_style" format="color" />
        <attr name="xpad_key_chars_fg_color" format="color" />
        <attr name="xpad_key_chars_highlight_fg_color" format="color" />
        <attr name="xpad_key_chars_divider_style" format="string" />
        <attr name="xpad_key_chars_divider_shadow_style" format="string" />
    </declare-styleable>
</resources>
