<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:padding="16dp"
        android:background="?attr/key_highlight_fg_color">

    <org.crazydan.studio.app.ime.kuaizi.ui.theme.ReadonlyImeInputViewLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <include
                layout="@layout/ime_input_view"
                android:id="@+id/ime_view"
                android:layout_width="@dimen/ime_preview_width"
                android:layout_height="@dimen/ime_preview_height" />
    </org.crazydan.studio.app.ime.kuaizi.ui.theme.ReadonlyImeInputViewLayout>
</LinearLayout>
