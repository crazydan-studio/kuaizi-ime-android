<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexWrap="nowrap"
        app:flexDirection="column"
        app:alignItems="center"
        app:alignContent="stretch">

    <TextView
            android:id="@+id/word_spell_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_completions_word_spell_text_size"
            android:textColor="?attr/input_completions_fg_color" />

    <!-- 含读音的字和不含读音的拉丁文只出现一个，后者因为不含读音，故而其字体更大 -->
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/word_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/input_completions_word_text_size"
                android:textColor="?attr/input_completions_fg_color" />

        <TextView
                android:id="@+id/latin_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/input_completions_latin_text_size"
                android:textColor="?attr/input_completions_fg_color" />
    </FrameLayout>

</com.google.android.flexbox.FlexboxLayout>
