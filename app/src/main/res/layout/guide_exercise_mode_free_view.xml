<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:textSize="24sp"
            android:textColor="?android:attr/titleTextColor" />

    <org.crazydan.studio.app.ime.kuaizi.ui.common.ImeSupportEditText
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:autofillHints=""
            android:hint="@string/text_guide_free_mode_edit_text_placeholder"
            android:background="@drawable/bg_round_corner_box"
            android:backgroundTint="@android:color/holo_blue_dark" />
</LinearLayout>
